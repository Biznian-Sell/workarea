{
  "name": "Workarea Commerce",
  "description": "An enterprise-grade Ruby on Rails commerce platform",
  "repository": "https://github.com/workarea-commerce/workarea",
  "logo": "https://i.imgur.com/SPTlyze.png",
  "keywords": [
    "ruby",
    "rails",
    "ecommerce",
    "commerce",
    "mongodb",
    "elasticsearch",
    "redis",
    "ecommerce-platform",
    "ecommerce-framework",
    "ruby-on-rails"
  ],
  "addons": [
    {
      "plan": "mongolab:sandbox",
      "as": "WORKAREA_MONGOID"
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "WORKAREA_REDIS"
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    },
  ],
  "env": {
    "SECRET_KEY_BASE": {
      "generator": "secret",
      "required": true
    },
    "WORKAREA_ELASTICSEARCH_URL": {
      "required": true
    },
    "WORKAREA_S3_ACCESS_KEY_ID": {
      "required": true
    },
    "WORKAREA_S3_SECRET_ACCESS_KEY": {
      "required": true
    },
    "WORKAREA_S3_BUCKET_NAME": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": "true"
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": "true"
    }
  },
  "scripts": {
    "postdeploy": "bundle exec rails db:seed",
    "pr-predestroy": "bundle exec workarea:search_index:clean"
  },
  "stack": "container"
}
